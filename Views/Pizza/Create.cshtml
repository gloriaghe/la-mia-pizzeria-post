@model Pizza


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuova Pizza</h1>
            </div>
            <form class="row g-3" asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    <strong>Nome:</strong>
                    <input asp-for="Name" class="d-block w-100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <strong>Descrizione:</strong>
                    <textarea asp-for="Description" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <strong>Immagine:</strong>
                    <input asp-for="Image" class="d-block w-100" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <strong>Prezzo:</strong>
                    <input asp-for="Price" class="d-block w-100" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Salva Pizza</button>
                </div>
            </form>

        </div>
    </div>
</div>